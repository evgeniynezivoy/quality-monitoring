# Database
DB_NAME=quality_monitoring
DB_USER=quality_user
DB_PASSWORD=your_secure_database_password

# JWT
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google Sheets API (Service Account)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Sync
SYNC_INTERVAL_MINUTES=10

# SMTP (for daily reports)
SMTP_HOST=mail.itclouddelivery.com
SMTP_PORT=587
SMTP_USER=no-reply@reports.infuse.com
SMTP_PASSWORD=your_smtp_password

# Daily Reports
ENABLE_DAILY_REPORTS=true
DAILY_REPORT_SCHEDULE=0 8 * * *
REPORT_RECIPIENTS=manager1@example.com,manager2@example.com
